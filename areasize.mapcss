area["landuse"][!dibavod:id]::landuse
{
z-index: +2;
font-size: 16;
font-weight: bold;
text-position: center;
text: eval(cond(areasize()>1000,"",concat(round(areasize())," m2")));
fill-color: eval(cond(areasize()>1000,#808080,cond(areasize()>700,orange,red)));
fill-opacity: eval(cond(areasize()>1000,0.0,0.6));
width: eval(cond(areasize()>1000,0,cond(areasize()>700,5,10)));
opacity: 0.6;
}

